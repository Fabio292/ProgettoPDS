<Window x:Class="Client.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Varmuskoopio" MinHeight="420" MinWidth="500" Height="400" Width="500" ResizeMode="CanResize" Closing="Window_Closing" Loaded="Window_Loaded" Background="#B25F9EA0">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="TABControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="5,5,5,5" Grid.ColumnSpan="3" >
            <TabItem Header="Login">
                <Grid Background="#B25F9EA0">
                    
                    <Grid.ContextMenu>
                        <ContextMenu/>
                    </Grid.ContextMenu>

                    <Label x:Name="nome" Content="Username" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,30,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TXTUsernameInserito" HorizontalAlignment="Center" Height="23" Margin="0,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>

                    <Label x:Name="pwd" Content="Password" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,100,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="TXTPasswordInserita" HorizontalAlignment="Center" Height="23" Margin="0,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>

                    <CheckBox x:Name="ChkRicorda" Content="Ricordami" HorizontalAlignment="Center" Margin="148,151,255,0" VerticalAlignment="Top"/>
                    <Button x:Name="login" Content="Login" HorizontalAlignment="Center" Margin="188,193,188,0" FontWeight="Bold"  MinHeight="50" Width="100" VerticalAlignment="Top" Background="AliceBlue"  Click="checkLogin"/>

                    <Label Height="26" Margin="20,290,0,0" Name="link_a_registrazione" Foreground="Black" VerticalAlignment="Top">
                        <Hyperlink Click="AddAccount" Foreground="Black" FontWeight="Bold">Non possiedi un account? Registrati</Hyperlink>
                    </Label>
                </Grid>
            </TabItem>


            <TabItem Header="Registrazione">
                <Grid Background="#B25F9EA0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="103*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="nome_reg" Content="Username" HorizontalAlignment="Center" FontWeight="Bold" Margin="47.977,30,195,0" VerticalAlignment="Top" Grid.Column="2" />
                    <TextBox x:Name="TXTusernameReg" HorizontalAlignment="Center" Height="23" Margin="114,55,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Label x:Name="pwd_reg" Content="Password" HorizontalAlignment="Center" FontWeight="Bold" Margin="48.977,83,197,0" VerticalAlignment="Top" Grid.Column="2" />
                    <TextBox x:Name="TXTPwdReg" HorizontalAlignment="Center" Height="23" Margin="114,110,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Label x:Name="ripetipwd" Content="Ripeti password" HorizontalAlignment="Center" FontWeight="Bold" Margin="30.977,137,178,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <TextBox x:Name="TXTPwdRepReg" HorizontalAlignment="Center" Height="23" Margin="114,165,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Button x:Name="BTNRegistration" Content="Registrati" HorizontalAlignment="Center" Margin="30.977,216,178,0" FontWeight="Bold"  MinHeight="50" Width="100" VerticalAlignment="Top" Background="AliceBlue"  Click="sendRegistration" Grid.Column="2"/>
                </Grid>
            </TabItem>


            <TabItem Header="Main">
                <DockPanel Background="#B25F9EA0" >
                    <StatusBar Name="StatusBarBottom" DockPanel.Dock="Bottom" Height="20">
                        <StatusBar.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid Name="StatusBarGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="0.2*" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </StatusBar.ItemsPanel>

                        <StatusBarItem Grid.Column="0">
                            <TextBlock Name="lblStatusLeft" Text="TESTO"  />
                        </StatusBarItem>

                        <Separator Grid.Column="1" />
                        <StatusBarItem Grid.Column="2">
                            <TextBlock Name="lblStatusCenter"  Text="Stato dell'applicazione" />
                        </StatusBarItem>
                        <Separator Grid.Column="3" />

                        <StatusBarItem Grid.Column="4" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <TextBlock Name="lblStatusRight" Text="TESTO  " TextAlignment="Right"/>
                        </StatusBarItem>
                    </StatusBar>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" >
                            <Button x:Name="BtnStartSynch" Content="Avvia Synch" FontWeight="Bold"  MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue"  Click="BtnStartSynch_Click"/>
                            <Button x:Name="BtnStoria" Content="Vers prec" MinHeight="60" FontWeight="Bold" MaxWidth="70" MinWidth="80" Margin="0,20,0,0"  Background="AliceBlue" Click="BtnStoria_Click"/>
                            <Button x:Name="BtnStartTimer" Content="Start Timer" FontWeight="Bold" MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue" Click="BtnStartTimer_Click" />
                            <Button x:Name="BtnStopTimer" Content="Stop Timer" FontWeight="Bold" MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue" Click="BtnStopTimer_Click" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" >
                        </StackPanel>
                    </Grid>

                    <TreeView x:Name="TRWFolder"  VerticalContentAlignment="Stretch" Margin="0,20,0,20" Width="350" Background="White" HorizontalAlignment="Center" />
                </DockPanel>
            </TabItem>

            <TabItem Header="Storico">
                <Grid Background="#B25F9EA0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="93*"/>
                        <ColumnDefinition Width="383*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="backButton" Content="Ritorna al main" HorizontalAlignment="Center" FontWeight="Bold" Background="AliceBlue" VerticalAlignment="Top" MinHeight="60" MaxWidth="140" MinWidth="140" Click="BackToMainButton" Margin="75,260,168,0" Grid.Column="1"/>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
