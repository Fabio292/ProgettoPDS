<Window x:Class="Client.Window1"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Varmuskoopio" MinHeight="420" MinWidth="500" Height="400" Width="500" MaxHeight="420" MaxWidth="500" ResizeMode="CanResize" Closing="Window_Closing" Loaded="Window_Loaded" Background="#B25F9EA0">


    <Grid Height="389" Background="#B25F9EA0" VerticalAlignment="Bottom">

        <TabControl x:Name="TABControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.ColumnSpan="3" >

            <TabItem Header="Login">
                <Grid Background="#B25F9EA0">
                    <Grid.ContextMenu>
                        <ContextMenu/>
                    </Grid.ContextMenu>

                    <Label x:Name="nome" Content="Username" HorizontalAlignment="Center" FontWeight="Bold" Margin="205,30,188,0" VerticalAlignment="Top" Width="83"/>
                    <TextBox x:Name="TXTUsernameInserito" HorizontalAlignment="Center" Height="23" Margin="0,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>

                    <Label x:Name="savedPwdpwd" Content="Password" HorizontalAlignment="Center" FontWeight="Bold" Margin="206,108,188,0" VerticalAlignment="Top" Width="82" />
                    <TextBox x:Name="TXTPasswordInserita" HorizontalAlignment="Center" Height="23" Margin="148,139,148,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>

                    <CheckBox x:Name="ChkRicorda" Content="Ricordami" HorizontalAlignment="Center" Margin="148,167,228,0" VerticalAlignment="Top" Width="100"/>
                    <Button x:Name="login" Content="Login" HorizontalAlignment="Center" Margin="188,219,188,0" FontWeight="Bold"  MinHeight="50" Width="100" VerticalAlignment="Top" Background="AliceBlue"  Click="checkLogin"/>

                    <Label Height="26" Margin="10,315,10,0" Name="link_a_registrazione" Foreground="Black" VerticalAlignment="Top">
                        <Hyperlink Click="AddAccount" Foreground="Black" FontWeight="Bold">Non possiedi un account? Registrati</Hyperlink>
                    </Label>
                </Grid>
            </TabItem>

            <TabItem Header="Registrazione">
                <Grid Background="#B25F9EA0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="103*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="nome_reg" Content="Username" HorizontalAlignment="Center" FontWeight="Bold" Margin="55,30,185,0" VerticalAlignment="Top" Grid.Column="2" Width="83" />
                    <TextBox x:Name="TXTusernameReg" HorizontalAlignment="Center" Height="23" Margin="114,55,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Label x:Name="pwd_reg" Content="Password" HorizontalAlignment="Center" FontWeight="Bold" Margin="56,83,185,0" VerticalAlignment="Top" Grid.Column="2" Width="82" />
                    <TextBox x:Name="TXTPwdReg" HorizontalAlignment="Center" Height="23" Margin="114,110,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Label x:Name="ripetipwd" Content="Ripeti password" HorizontalAlignment="Center" FontWeight="Bold" Margin="38,137,165,0" VerticalAlignment="Top" Grid.Column="2" Width="120"/>
                    <TextBox x:Name="TXTPwdRepReg" HorizontalAlignment="Center" Height="23" Margin="114,165,138,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Button x:Name="BTNRegistration" Content="Registrati" HorizontalAlignment="Center" Margin="30.977,216,178,0" FontWeight="Bold"  MinHeight="50" Width="100" VerticalAlignment="Top" Background="AliceBlue"  Click="sendRegistration" Grid.Column="2"/>
                </Grid>
            </TabItem>

            <TabItem Header="Main">
                <DockPanel Background="#B25F9EA0" >
                    <StatusBar Name="StatusBarBottom" DockPanel.Dock="Bottom" Height="20">
                        <StatusBar.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid Name="StatusBarGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="0.2*" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </StatusBar.ItemsPanel>

                        <StatusBarItem Grid.Column="0">
                            <TextBlock Name="lblStatusLeft" Text="TESTO"  />
                        </StatusBarItem>

                        <Separator Grid.Column="1" />
                        <StatusBarItem Grid.Column="2">
                            <TextBlock Name="lblStatusCenter"  Text="Stato dell'applicazione" />
                        </StatusBarItem>
                        <Separator Grid.Column="3" />

                        <StatusBarItem Grid.Column="4" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <TextBlock Name="lblStatusRight" Text="TESTO  " TextAlignment="Right"/>
                        </StatusBarItem>
                    </StatusBar>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" >
                            <Button x:Name="BtnSettings" Content="Impostazioni" MinHeight="60" FontWeight="Bold" MaxWidth="70" MinWidth="80" Margin="0,20,0,0"  Background="AliceBlue" Click="BtnSettings_Click"/>
                            <Button x:Name="BtnStoria" Content="Restore" MinHeight="60" FontWeight="Bold" MaxWidth="70" MinWidth="80" Margin="0,20,0,0"  Background="AliceBlue" Click="BtnStoria_Click"/>
                            <Button x:Name="BtnStartSynch" Content="Avvia Synch" FontWeight="Bold"  MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue"  Click="BtnStartSynch_Click"/>
                            <Button x:Name="BtnStartTimer" Content="Start Timer" FontWeight="Bold" MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue" Click="BtnStartTimer_Click" />
                            <Button x:Name="BtnStopTimer" Content="Stop Timer" FontWeight="Bold" MinHeight="60" MaxWidth="80" MinWidth="70" Margin="0,20,0,0" Background="AliceBlue" Click="BtnStopTimer_Click" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" >
                        </StackPanel>
                    </Grid>

                    <TreeView x:Name="TRWFolder"  VerticalContentAlignment="Stretch" Margin="0,20,0,20" Width="350" Background="White" HorizontalAlignment="Center" />
                </DockPanel>
            </TabItem>

            <TabItem Header="Storico">
                <Grid Background="#B25F9EA0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="93*"/>
                        <ColumnDefinition Width="383*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="backButton" Content="Ritorna al main" HorizontalAlignment="Center" FontWeight="Bold" Background="AliceBlue" VerticalAlignment="Top" MaxHeight="30" MinHeight="30" MaxWidth="140" MinWidth="140" Click="BackToMainButton" Margin="241,321,10,0" Grid.Column="1" Height="0" Width="119"/>
                    <TreeView x:Name="treeViewGeneral" Grid.Column="1" HorizontalAlignment="Left" Height="296" Margin="90,10,0,0" VerticalAlignment="Top" Width="170"/>
                    <TreeView x:Name="treeViewSpecific" HorizontalAlignment="Left" Height="296" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>

            <TabItem Header="Impostazioni">
                <Grid Background="#B25F9EA0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="93*"/>
                        <ColumnDefinition Width="383*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="browserPath" Content="Browse..." HorizontalAlignment="Center" FontWeight="Bold" Background="AliceBlue" VerticalAlignment="Top" MinHeight="20" MaxWidth="100" MinWidth="100" Click="BrowseDirectory" Margin="273,64,10,0" Grid.Column="1" Width="98" RenderTransformOrigin="0.493,-1.267" Height="23"/>
                    <Label x:Name="inserisciPath" Content="Cartella da sincronizzare" HorizontalAlignment="Left" FontWeight="Bold" Margin="29,33,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="265"/>
                    <TextBox x:Name="TXTpathCartella" HorizontalAlignment="Left" Height="23" Margin="29,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="301" Grid.ColumnSpan="2"/>
                    <Label x:Name="inserisciTimer" Content="Modifica la frequenza del Timer (secondi)" HorizontalAlignment="Left" FontWeight="Bold" Margin="29,110,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="265"/>
                    <xctk:IntegerUpDown x:Name="timerValue" Value="60" Margin="273,110,10,215" Grid.Column="1" />
                    <Button x:Name="setButton" Content="Salva impostazioni" HorizontalAlignment="Center" FontWeight="Bold" Background="AliceBlue" VerticalAlignment="Top" MinHeight="30" MaxWidth="140" MinWidth="140" Click="SaveSettings" Margin="84,321,167,0" Grid.Column="1"/>
                    <Button x:Name="back" Content="Ritorna al main" HorizontalAlignment="Center" FontWeight="Bold" Background="AliceBlue" VerticalAlignment="Top" MinHeight="30" MaxWidth="140" MinWidth="140" Click="BackToMainButton" Margin="241,321,10,0" Grid.Column="1"/>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
